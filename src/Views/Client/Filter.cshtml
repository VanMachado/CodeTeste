@model IEnumerable<CodeChallenge.Models.Dto.ClientDto>

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Clients</h4>
    <hr />
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr class="table-success">
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataRegistro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CpfOuCnpj)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientBlocked)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataRegistro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CpfOuCnpj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientBlocked)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Index" class="btn btn-primary">Back to the list</a>
    </div>
</div>
